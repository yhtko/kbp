{
  "name": "kbp",
  "private": true,
  "workspaces": [
    "packages/*",
    "plugins/*",
    "tools"
  ],
  "scripts": {
    "create:plugin": "node scripts/create-plugin.mjs",
    "build": "npm run -ws --if-present build",
    "lint": "npm run -ws --if-present lint",
    "pack": "npm run -ws --if-present pack",
    "kb:check": "node tools/kb-check-css.mjs",
    "kb:zipverify": "node tools/kb-zip-verify.mjs",
    "check": "npm run lint && npm run kb:check",
    "verify": "npm run pack && npm run kb:zipverify",
    "ci": "npm run build && npm run check && npm run verify"
  },
  "devDependencies": {
    "adm-zip": "^0.5.12",
    "cpx2": "^8.0.0",
    "esbuild": "^0.25.11",
    "eslint": "^9.38.0",
    "globby": "^14.0.0",
    "rimraf": "^6.0.1"
  }
}
